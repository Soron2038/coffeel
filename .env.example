# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DB_PATH=./data/coffee.db

# Admin Panel Authentication (HTTP Basic Auth)
ADMIN_USER={{admin_username}}
ADMIN_PASS={{admin_password}}

# SMTP Configuration (for payment request emails)
SMTP_HOST={{smtp_host}}
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER={{smtp_username}}
SMTP_PASS={{smtp_password}}
SMTP_FROM="CofFeEL System <coffee@example.com>"

# Coffee Settings (can also be changed in admin panel)
COFFEE_PRICE=0.50
ADMIN_EMAIL={{admin_email}}

# Bank Details (for payment instructions in emails)
BANK_IBAN={{bank_iban}}
BANK_BIC={{bank_bic}}
BANK_OWNER="CFEL Coffee Fund"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Logging
LOG_LEVEL=info
